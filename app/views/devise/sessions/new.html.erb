<div class="center measure">


<h2 class="f1">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>



  <div class="mv3">
     <%= f.label :login %><br />
     <%= f.text_field :login, class:'b pa2 input-reset ba bg-transparent hover-bg-navy hover-white w-100' %>
  </div>

  <div class="mv3">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class:'b pa2 input-reset ba bg-transparent hover-bg-navy hover-white w-100' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="mv3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="mv3">
    <%= f.submit "Log in", class:'b ph3 pv2 input-reset ba b--black bg-transparent grow pointer f6 dib' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
