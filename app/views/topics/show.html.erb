<h1><%= @topic.title %></h1>
<h4>created by <%= @topic.user.username %></h4>

<% if @topic.user == current_user  %>
  <%= link_to "Delete", topic_path(@topic), method: :delete, class: "btn btn-danger btn-sm" %>
  <%= link_to 'Edit Topic', edit_topic_path, class: 'btn btn-info btn-sm' %>
  <%= link_to 'Add Bookmark', new_topic_bookmark_path(@topic, @bookmark), class: 'btn btn-success btn-sm' %>
<% end %>

</div>
<p>
  <% @bookmarks.each do |bookmark| %>
    <p>
      <%= link_to bookmark.url, topic_bookmark_path(@topic, bookmark) %>
      <%= link_to 'Edit Bookmark', edit_topic_bookmark_path(@topic, bookmark), class: 'btn btn-info btn-sm' %>
      <%= link_to "Delete", topic_bookmark_path(@topic, bookmark), method: :delete, class: "btn btn-danger btn-sm" %>
    </p>
  <% end %>
</p>
